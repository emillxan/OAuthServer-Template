@model OAuthServer.ViewModels.LoginViewModel
<h1>Login</h1>


<form asp-controller="Account" asp-action="Login" method="post">
    <input hidden asp-for="ReturnUrl" />
    <div>
        <label>UserName</label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <p>
        <button type="submit">Log in</button>
        <a href="Register?returnUrl=@Model.ReturnUrl">Register</a>
        <a href="ForgotPassword">Forgot Password</a>
    </p>
</form>

@if(Model.ExternalProviders != null){
<form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
    @foreach (var provider in Model.ExternalProviders)
    {
        <button type="submit"
            name="provider"
            value="@provider.Name">
            @provider.DisplayName
        </button>
    }
</form>
}